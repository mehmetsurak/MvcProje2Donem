@model MvcProje.Models.Entity.TblMusteriler
@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Müşteri Adı</label>
        @Html.TextBoxFor(m => m.MUSTERIAD, new { @class = "form-control", @id = "txtAd" })
        @Html.ValidationMessageFor(m => m.MUSTERIAD, "", new { @style = "color:blue" })
        @*<label id="lblAdHata" style="display:none; color:red;">Client Side Hata-Ad</label>*@

       
    </div>
    <div>
        <label>Müşteri Soyadı</label>
        <input type="text" class="form-control" name="MUSTERISOYAD" />
        @Html.ValidationMessageFor(m => m.MUSTERISOYAD, "", new { @style = "color:blue" })
        @*<label id="lblSoyadHata" style="display:none; color:red;">Client Side Hata-Soyad</label>*@



    </div>
    <div>
        <button class="btn btn-info" id="btn1" onclick="EkranaBas()">Müşteri Ekle</button>
    </div>
    <script>
        function EkranaBas() {
            if (document.getElementById("txtAd").value == "") {

                alert('Ekleme İşlemi Gerçekleşmedi');
            }
            else {
                alert('Müşteri Ekleme İşlemi Yapıldı...!');
            }
        }
    </script>
</form>


